doctype html
html
  head
    title #{song.title}
    style.
      body {
        font-family: Arial, sans-serif;
        text-align: right;
        margin: 0;
        padding: 0;
        margin-right: 25%;
        background: #0080ff;
      }
      .css {
        padding: 20px;
      }
      h1 {
        margin-top: 20px;
      }
      p {
        margin-bottom: 10px;
      }
      a {
        text-decoration: none;
        color: #333;
      }
      a:hover {
        color: #666;
      }
  body
      .css 
        h1 #{song.title}
        h3  Autore: #{song.author} 
        h3  Testo: #{song.lyrics}
      
      a(href="/song/1") Canzone 1
      br
      br
      a(href="/song/2") Canzone 2
      br
      br
      a(href="/song/3") Canzone 3
      br
      br
      a(href="/") Pagina iniziale